<?xml version="1.0" encoding="UTF-8"?>

<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
      x:Class="PhantasmaMail.Controls.WalletAssetCell"
      x:Key="WalletAssetCell">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <ffimageloading:CachedImage Grid.Column="0"/>

    <Frame Grid.Column="1" CornerRadius="0" HasShadow="True" >
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Start"
                   Text="{Binding TokenDetails.Name}"/>

            <Label Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="End"
                   Text="{Binding FiatValue}"/>


            <Label Grid.Row="1" Grid.Column="0" HorizontalTextAlignment="Start"
                   Text="{Binding Amount}"/>

            <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End"
                   Text="{Binding FiatChange}"/>

        </Grid>
    </Frame>
</Grid>